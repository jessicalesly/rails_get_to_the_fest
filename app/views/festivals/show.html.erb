<div class="yellow-container-results">
  <div class="container">
    <div class="row">

        <div class="col-md-8 col-md-offset-2">
          <div class="card-black">
            <!-- Front of the card -->
            <div class="front">
              <div class="pad">
                <h2 id="title-fest"><%= @festival.name %></h2>
                <div id="title-place">
                  <div class="flex-align-colle">
                    <h2 id="city"><%= @festival.city %></h2>
                    <h2 class="text-bold" id="country">/ <%= @festival.country.upcase %></h2>
                  </div>
                </div>
                <div class="card-date">
                  <h3 class="month"><%= Time.parse(@festival.start_date).strftime('%B').upcase %></h3>
                  <h2 class="day"> <%= Time.parse(@festival.start_date).day %> </h2>
                  <h3 style="color:white; margin:0; font-weight:bold">>></h3>
                  <h3 class ="month"><%= Time.parse(@festival.end_date).strftime('%B').upcase %></h3>
                  <h2 class="day"><%= Time.parse(@festival.end_date).day %></h2>
                </div>
                <div class="btn-turn">
                  <div class="btn-get-turn"><p>Line Up</p></div>
                </div>
              </div>
            </div>
            <!-- Back of the card -->
            <div class="back">
              <!-- <div class="btn-turn">
                  <div class="btn-get-turn"></div>
              </div> -->
            </div>
            <div class="line-up line-up-close">
              <div class="line-up-content line-up-content-close">
                <ul>
                  <% @festival.artists.each do |artist| %>
                  <li> <img src=<%="#{Artist.find_by(name: artist[:name]).picture}"%> style="height: 50px; width: 50px;" alt="">
                    <%= artist.name %> </li>
                  <% end %>
                </ul>
              </div>
              <div class="btn-line-up">
                  <div class="btn-get-line-up">Get back to the Fest</div>
              </div>
            </div>
          </div>
        </div>

        <!-- End of the festival card -->

        <!-- Renard logo -->
        <div class="col-md-6 col-md-offset-3">
          <img src="<%=image_path('renard.png')%>" style="margin-top:90px;" alt="">
        </div>

    </div>
  </div>
</div>

